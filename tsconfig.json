{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["esnext"],

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "downlevelIteration": false,
    "pretty": true,

    "rootDir": "./src",
    "outDir": "./build"
  },
  "exclude": ["node_modules", "build", "**/*.test.ts"]
}
